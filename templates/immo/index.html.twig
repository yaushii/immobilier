{% extends 'base.html.twig' %}

{% block title %}Hello ImmoController!{% endblock %}
{% block body %}
<section class="articles">
{% for article in articles  %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie Biens</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            {{ article.content | raw }}
            <a href="{{ path('immo_show', {'id': article.id}) }}" class="btn btn-primary">lire la suite</a>
        </div>
    </article><br>
    {% endfor %}
</section>
{% endblock %}
